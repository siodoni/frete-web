        <class>br.com.snbsolucoes.modelo.geral.EmpresaProp</class>
        <class>br.com.snbsolucoes.modelo.geral.Cidade</class>
        <class>br.com.snbsolucoes.modelo.geral.Pais</class>
        <class>br.com.snbsolucoes.modelo.geral.Transportadora</class>
        <class>br.com.snbsolucoes.modelo.geral.Usuario</class>
        <class>br.com.snbsolucoes.modelo.frete.Calculo</class>
        <class>br.com.snbsolucoes.modelo.frete.CalculoDetalhe</class>
        <class>br.com.snbsolucoes.modelo.frete.Controle</class>
        <class>br.com.snbsolucoes.modelo.frete.FamiliaProduto</class>
